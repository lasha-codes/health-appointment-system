generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String
  email     String   @unique
  image_url String?
  Doctor    Doctor[]
}

model Doctor {
  id            String   @id @default(uuid())
  name          String
  image_url     String
  email         String   @unique
  phonenumber   Int      @unique
  summary       String?
  bio           String?
  user          User     @relation(fields: [userId], references: [id])
  userId        String
  working_times String[]
  services      Json[]
}
